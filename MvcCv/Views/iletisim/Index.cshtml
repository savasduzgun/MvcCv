
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@using MvcCv.Models.Entity
@model List<Tbliletisim>
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse">
                                    @foreach (var item in Model)
                                    {


                                        <!-- timeline time label -->
                                        <div class="time-label">
                                            <span class="bg-info">
                                                @(((DateTime)item.Tarih).ToString("dd-MM-yyyy-HH-mm-ss"))
                                            </span>
                                        </div>
                                        <div>
                                            <i class="fas fa-comments bg-warning"></i>
                                            <div class="timeline-item">
                                                <span class="time"><i class="far fa-clock"></i>@item.Mail</span>
                                                <h3 class="timeline-header"><a href="#">@item.Adsoyad</a> <b>Konu:</b> @item.Konu</h3>
                                                <div class="timeline-body">
                                                    @item.Mesaj                                                  
                                                </div>
                                                <a href="/iletisim/iletisimSil/@item.ID" class="btn btn-danger btn-sm">Sil</a>
                                            </div>
                                        </div>
                                      }
                                </div>
                            </div>
                        </div>
                        <!-- /.tab-content -->
                    </div><!-- /.card-body -->
                </div>
                <!-- /.nav-tabs-custom -->
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
</body>
</html>

